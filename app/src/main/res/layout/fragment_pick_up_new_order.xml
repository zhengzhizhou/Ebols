<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.ebols.Fragment.NewOrderFragments.PickUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"></LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/neworderPickUpTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PickUp Information" />

                <CheckBox
                    android:id="@+id/select_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bill this client"></CheckBox>

                <EditText
                    android:id="@+id/newOrderPickUpName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your Name Here" />

                <EditText
                    android:id="@+id/newOrderPickUpContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your Contact Here" />

                <EditText
                    android:id="@+id/newOrderPickUpAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your Address Here" />

                <EditText
                    android:id="@+id/newOrderPickUpCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your City Here" />

                <Spinner
                    android:id="@+id/newOrderPickUpState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

                <EditText
                    android:id="@+id/newOrderPickUpZip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your Zip Code Here" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newOrderPickUpPhone"
                    android:hint="Please Enter Your Phone Here"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newOrderPickUpNote"
                    android:hint="Please Enter Your Notes Here"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/neworderDelieveryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delievery Information" />

                <CheckBox
                    android:id="@+id/select_Delievery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bill this client"></CheckBox>

                <EditText
                    android:id="@+id/newOrderDelieveryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your Name Here" />

                <EditText
                    android:id="@+id/newOrderDelieveryContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your Contact Here" />

                <EditText
                    android:id="@+id/newOrderDelieveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your Address Here" />

                <EditText
                    android:id="@+id/newOrderDelieveryCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your City Here" />

                <Spinner
                    android:id="@+id/newOrderDelieveryState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>

                <EditText
                    android:id="@+id/newOrderDelieveryZip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please Enter Your Zip Code Here" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newOrderDelieveryPhone"
                    android:hint="Please Enter Your Phone Here"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newOrderDelieveryNote"
                    android:hint="Please Enter Your Notes Here"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Continue" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>
